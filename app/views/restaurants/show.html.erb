<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>


<ul>
  <li><%= @restaurant.name  %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.category  %></li>
</ul>

<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.rating %>
  <%= review.content  %></li>
  <% end %>
</ul>

<p><%= link_to "See all restaurants", restaurants_path  %></p>

<p><%= link_to "Add new review", new_restaurant_review_path(@restaurant)  %></p>
